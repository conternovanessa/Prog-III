<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.progetto.nuovo_progetto.client.controller.ComposeController" spacing="10">
    <HBox spacing="10">
        <Label text="To:"/>
        <TextField fx:id="toField" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Subject:"/>
        <TextField fx:id="subjectField" HBox.hgrow="ALWAYS"/>
    </HBox>
    <TextArea fx:id="bodyArea" VBox.vgrow="ALWAYS"/>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Send" onAction="#handleSend"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
