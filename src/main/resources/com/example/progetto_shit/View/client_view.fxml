<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.progetto_shit.Controller.ClientController">
    <TextField fx:id="recipientField" promptText="Recipient" />
    <TextField fx:id="subjectField" promptText="Subject" />
    <TextArea fx:id="bodyField" promptText="Email body" />
    <Button fx:id="sendButton" text="Send Email" />
    <Label fx:id="statusLabel" text="Status: Waiting" />
    <ListView fx:id="inboxListView" />
</VBox>