<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/17" fx:controller="com.example.progetto_shit.Controller.ClientController">
    <!-- Intestazione con indirizzo del server -->
    <Label fx:id="serverAddressLabel" text="Server Address: Not Connected" />

    <!-- Sezione per il contenuto dell'email selezionata -->
    <TextArea fx:id="emailContentArea" editable="false" wrapText="true" prefHeight="200" />

    <!-- Sezione per visualizzare i bottoni di azione -->
    <VBox fx:id="buttonBox" spacing="10">
        <!-- I bottoni di azione verranno aggiunti dinamicamente dal Controller -->
    </VBox>
</VBox>
